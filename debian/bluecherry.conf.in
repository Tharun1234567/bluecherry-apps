# Bluecherry configuration file

# Used to be sure we don't use configurations not suitable for us
version = "1.0";

bluecherry:
{
  db:
  {
    # 0 = sqlite, 1 = pgsql, 2 = mysql
    type = 2;
    dbname = "_DBC_DBNAME_";
    user = "_DBC_DBUSER_";
    password = "_DBC_DBPASS_";
    host = "_DBC_HOST_";
    userhost = "_DBC_USERHOST_";
  };
  subdomain:
  {
    provide_base_url = "_SUBDOMAIN_PROVIDER_BASE_URL_";
    admin_token = "_SUBDOMAIN_ADMIN_TOKEN_";
    get_token_api = "_SUBDOMAIN_GET_TOKEN_API_";
    cryptlex_access_token = "_CRYPTLEX_ACCESS_TOKEN_";
  };
};
